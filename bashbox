#!/usr/bin/env bash
if [ -z $1 ]; then
	echo $OSTYPE
elif [ $1 = -m ]; then
	printf '%s\n' "$HOSTTYPE"
elif [ $1 = --type ]; then
	echo $MACHTYPE
elif [ $1 = -a ]; then #linux only 
	printf '%s\n' "$(<"/proc/version")" #linux only
elif [ $1 = -n ]; then
	: '\h'
	printf '%s\n' "${_@P}"
else 
	echo "flags: -m --type -n"
