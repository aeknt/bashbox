uniq)
#!/bin/bash
repeat=no
if [ "$1" = -d ]; then
	while read -r line; do
		for check in "${hab[@]}"
		do
			if [ "$line" = "$check" ]; then
				echo "$line"
			fi
		done
		hab+=("$line")
	done
else
	while read -r line; do
		for check in "${hab[@]}"
		do
			if [ "$line" = "$check" ]; then
				repeat=yes
			fi
		done
		#echo $repeat : $line
		[ "$repeat" = "no" ] && echo "$line"
		repeat=no
		hab+=("$line")
	done
fi
;;
