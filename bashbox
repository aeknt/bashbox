    LC_MESSAGES
    LC_PAPER
    LC_NAME
    LC_ADDRESS
    LC_TELEPHONE
    LC_MEASUREMENT
    LC_IDENTIFICATION
)


for var in "${locale_vars[@]}"; do
    printf '%s=\"%s\"\n' "$var" "${!var:-$LANG}"
done
printf '%s=%s\n' "LC_ALL" "$LC_ALL"
