echo "$@"
;;
find)
#!/bin/bash
recurse() {  
	[ ! -d "$1" ] && return
	for i in "$1"/.* "$1"/*; do
		path=${i//\/\//\/} # replace all double slashes
		#skip . and ..
		[ "${path##*/}" = '.' ] && continue
		[ "${path##*/}" = '..' ] && continue
		echo "$path"
		# dont follow symbolic links
		[ -L "$path" ] && continue
		# recurse down dirs
		[ -d "$path" ] && recurse "$path"
	done
}
recurselinks() {  
	[ ! -d "$1" ] && return
	for i in "$1"/.* "$1"/*; do
		path=${i//\/\//\/} # replace all double slashes
		#skip . and ..
		[ "${path##*/}" = '.' ] && continue
		[ "${path##*/}" = '..' ] && continue
		echo "$path"
		# recurse down dirs
		[ -d "$path" ] && recurse "$path"
	done
}
if [ -z "$1" ]; then
	recurse .
else
	if [ "$1" = "-P" ]; then
		shift
		for file in "$@"; {
			recurse "$file"
		}
	elif [ "$1" = "-L" ]; then
		shift
		for file in "$@"; {
			recurselinks "$file"
		}
	else
		for file in "$@"; {
			recurse "$file"
		}
	fi
fi
;;
free)
#!/bin/bash
line(){
	#copy of getlines script
	#make array with all lines mapped to line numbers
	n=0
	while read -r line
	do
		n=$(( n + 1 ))
		lines[$n]="$line"
	done
	for arg in "$@"
	do
		#echo the line requested from the array
		echo "${lines[$arg]}"
	done
	
}
printf '%s\n' "$(</proc/meminfo)" | line 1 2 21 5 3
;;
